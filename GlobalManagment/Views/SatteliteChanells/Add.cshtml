@using Jandag.BLL.Models;
@model Jandag.BLL.Models.SatteliteFrequencyModel
<!DOCTYPE html>
<html>
<head>
    <title>თანამგზავრი</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #B2B377;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 5px;
            border-radius: 30px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            background-color: #FFF8DC;
        }

        h2 {
            color: black;
            margin-bottom: 20px;
            margin-left:210px;
            font-weight:600;
        }

        .form-group {
            margin-bottom: 30px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"],
        input[type="number"] {
            border: 1px solid #ced4da;
            border-radius: 20px;
            padding: 10px;
            width: 100%;
            font-size:20px;
            font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif,'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            background-color: #FFF8DC;
            font-weight:400;
        }

        input[type="text"]:focus,
        input[type="number"]:focus {
            border-color: #007bff;
            outline: none;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 120px;
            padding: 10px 20px;
            margin-left: 450px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>თანამგზავრული სიგნალის დამატება</h2>
        <form asp-action="Post" asp-controller="SatteliteChanells">
            <div class="form-group">
                <label for="degree">გრადუსი</label>
                <input type="text" class="form-control" name="Degree" id="degree" placeholder="მაგ: 80" />
            </div>
            <div class="form-group">
                <label for="frequency">სიხშირე</label>
                <input type="number" name="Frequency" class="form-control" id="frequency" placeholder="მაგ: 11095" />
            </div>
            <div class="form-group">
                <label for="symbolRate">სისწრაფე</label>
                <input type="number" class="form-control" name="SymbolRate" id="symbolRate" placeholder="მაგ: 27500" />
            </div>
            <div class="form-group">
                <label for="polarisation">პოლარიზაცია</label>
                <input type="text" class="form-control" name="Polarisation" id="polarisation" placeholder="მაგ: H, V, R, L" />
            </div>
            <div class="form-group">
                <label for="portIn250">პორტი 250 იემერში</label>
                <input type="number" class="form-control" name="PortIn250" id="portIn250" placeholder="მაგ: 137" />
            </div>
            <div class="form-group">
                <label for="chanellIds">არხების სახელი:</label>
                <input type="text" class="form-control" name="chanellIds" id="chanellIds" placeholder="მაგ: adjara, rustavi 2" />
            </div>
            <button type="submit" class="btn btn-primary">დამატება</button>
        </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
