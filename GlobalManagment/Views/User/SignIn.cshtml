@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authorization</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            color: #333;
            background-repeat: no-repeat;
            background-size:cover;
            background-image: url('https://images.unsplash.com/photo-1509822929063-6b6cfc9b42f2?ixlib=rb-1.2.1&q=80&fm=jpg&crop=entropy&cs=tinysrgb&fit=max&ixid=eyJhcHBfaWQiOjExNzczfQ&w=2000');
        }

        .container {
            margin-top: 50px;
            border-radius:45px;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin-left:-110px;
            width: 150%;
            opacity:0.3;
           
        }

            .card:hover
            {
                opacity:1.3;
                box-shadow: 0 0 30px rgba(6, 3, 2, 0.1);
            }
        .card-header {
            background-color: #007bff;
            color: #fff;
            border-radius: 10px 10px 0 0;
        }

        .card-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 0;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 5px;
            padding: 10px;
            transition: border-color 0.2s ease-in-out;
        
        }

            .form-control:focus {
                outline: none;
                border-color: #007bff;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 12px 30px;
            border-radius: 5px;
            transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-block {
            width: 100%;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            padding: 12px 30px;
            border-radius: 5px;
            transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #5a6268;
            }

        .footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: center;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h2 class="card-title">ავტორიზაცია</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="SignIn">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input type="text" id="Username" name="Username" class="form-control" placeholder="მომხმარებლის სახელი" required autofocus>
                                <div asp-validation-for="Username" class="text-danger"></div>
                            </div>
                            <div class="form-group">
                                <input type="password" id="Password" name="Password" class="form-control" placeholder="პაროლი" required>
                                <div asp-validation-for="password" class="text-danger"></div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">შესვლა</button>
                            </div>
                        </form>
                        <div class="text-center">
                            <a href="/User/Registration" class="btn btn-secondary btn-block">რეგისტრაცია</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        &copy; 2024 ყველა უფლება დაცულია | Developed By <a href="https://ge.linkedin.com/in/guga-apkhazava-938a40237" target="_blank">Guga</a>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
