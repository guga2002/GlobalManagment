@model Jandag.BLL.Models.CustomerModel

@{
    Layout = null;
    ViewData["Title"] = "Registration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            color: #333;
            background-repeat: no-repeat;
            background-size: cover;
            background-image: url('https://www.desktopbackground.org/p/2011/10/11/279337_page-2-full-hd-1080p-dark-wallpapers-hd-desktop-backgrounds_1920x1080_h.jpg');
           
        }

        .container {
            margin-top: 50px;
            width: 4000px;
            opacity: 0.2;
            
        }

            .container:hover
            {
                opacity:1;
            }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0px 0px 20px rgba(1, 3, 5, 0.1);
          
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            border-bottom: none;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            text-align: center;
            padding: 20px;
        }

        .card-body {
            padding: 40px;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 5px;
            padding: 12px;
            font-size: 16px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            padding: 12px 20px;
            font-size: 18px;
            font-weight: bold;
            letter-spacing: 1px;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #0056b3; 
                padding: 14px 22px;
                font-size: 20px;
            }

        .link {
            color: #007bff;
            text-decoration: none;
            transition: color 0.3s;
        }

            .link:hover {
                color: #0056b3;
                text-decoration: underline;
            }

        .footer {
            margin-top: 50px;
            text-align: center;
            font-size: 14px;
            color: #888;
        }
    </style>
    <title>რეგისტრაცია</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h2>რეგისტრაცია</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="Registration" asp-controller="User" method="post">
                            <div class="form-group">
                                <input type="text" id="Name" name="Name" class="form-control" required placeholder="სახელი (en)" maxlength="20" min="7">
                            </div>
                            <div class="form-group">
                                <input type="text" id="Surname" name="Surname" class="form-control" required placeholder="გვარი (en)">
                            </div>
                            <div class="form-group">
                                <input type="date" id="Birthday" name="Birthday" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <input type="text" id="PersonalNumber" name="PersonalNumber" class="form-control" required placeholder="პირადი ნომერი">
                            </div>
                            <div class="form-group">
                                <input type="email" id="Email" name="Email" class="form-control" required placeholder="ელ. ფოსტა">
                            </div>
                            <div class="form-group">
                                <input type="text" id="Username" name="Username" class="form-control" required placeholder="მომხმარებლის სახელი (en)">
                            </div>
                            <div class="form-group">
                                <input type="password" id="Password" name="Password" class="form-control" required placeholder="პაროლი (en)">
                            </div>
                            <div class="form-group">
                                <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-control" required placeholder="ტელეფონის ნომერი">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">დარეგისტრირდი</button>
                        </form>
                        <div class="mt-3 text-center">
                            <p>უკვე გაქვს ანგარიში? <a href="/User/SignIn" class="link">შესვლა</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <p>&copy; 2024 ყველა უფლება დაცულია. Developed by <a href="https://ge.linkedin.com/in/guga-apkhazava-938a40237" class="link">Guga</a></p>
    </footer>
</body>
</html>
