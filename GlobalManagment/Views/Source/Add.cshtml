@using Jandag.BLL.Models
@model SourceModel
<!DOCTYPE html>
<html>
<head>

    <title>თანამგზავრი</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #B2B377;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 5px;
            border-radius: 30px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            background-color: #FFF8DC;
        }

        h2 {
            color: black;
            margin-bottom: 20px;
            margin-left: 210px;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 30px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"],
        input[type="number"] {
            border: 1px solid #ced4da;
            border-radius: 20px;
            padding: 10px;
            width: 100%;
            font-size: 20px;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif,'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            background-color: #FFF8DC;
            font-weight: 400;
        }

            input[type="text"]:focus,
            input[type="number"]:focus {
                border-color: #007bff;
                outline: none;
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 120px;
            padding: 10px 20px;
            margin-left: 450px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="message-box">
        @if (TempData["Error"] != null)
        {
            <div class="error-message">
                <script>
                    alert('@TempData["Error"]');
                </script>
            </div>
        }
        @if (TempData["success"] != null)
        {
            <div class="success-message">
                <script>
                    alert('@TempData["success"]');
                </script>
            </div>
        }
    </div>
    <div class="container">
        <h2>არხის დამატება</h2>
        <form asp-action="Insert" asp-controller="Source" method="post">
            <div class="form-group">
                <label for="ChanellFormat">არხის ფორმატი</label>
                <input type="text" class="form-control" asp-for="ChanellFormat" placeholder="მაგ: HD" />

                <label for="Status">სტატუსი</label>
                <input type="number" class="form-control" asp-for="Status" placeholder="მაგ:1-yes" />

                <label for="Reciever_ID">მიმღების იდენტიფიკატორი</label>
                <input type="number" class="form-control" asp-for="Reciever_ID" placeholder="მაგ: 2" />

                <label for="ChanellId">არხის იდენტიფიკატორი</label>
                <input type="number" class="form-control" asp-for="ChanellId" placeholder="მაგ: 3" />
            </div>
            <button type="submit" class="btn btn-primary">დამატება</button>
        </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
