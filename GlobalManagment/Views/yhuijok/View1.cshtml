@{
    ViewData["Title"] = "View1";
}

<h2>View1</h2>

@(Html.DevExtreme().DataGrid<GlobalManagment.Models.SignInModel>()
    .Columns(columns => {

        columns.AddFor(m => m.Username);

        columns.AddFor(m => m.Password);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
