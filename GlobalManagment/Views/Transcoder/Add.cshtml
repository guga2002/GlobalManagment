@using Jandag.BLL.Models.ViewModels
@model TranscoderViewModel
<!DOCTYPE html>
<html>
<head>
   
    <title>თანამგზავრი</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #B2B377;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 5px;
            border-radius: 30px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            background-color: #FFF8DC;
        }

        h2 {
            color: black;
            margin-bottom: 20px;
            margin-left: 210px;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 30px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"],
        input[type="number"] {
            border: 1px solid #ced4da;
            border-radius: 20px;
            padding: 10px;
            width: 100%;
            font-size: 20px;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif,'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            background-color: #FFF8DC;
            font-weight: 400;
        }

            input[type="text"]:focus,
            input[type="number"]:focus {
                border-color: #007bff;
                outline: none;
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 120px;
            padding: 10px 20px;
            margin-left: 450px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="message-box">
        @if (TempData["Error"] != null)
        {
            <div class="error-message">
                <script>
                    alert('@TempData["Error"]');
                </script>
            </div>
        }
        @if (TempData["success"] != null)
        {
            <div class="success-message">
                <script>
                    alert('@TempData["success"]');
                </script>
            </div>
        }
    </div>
    <div class="container">
        <h2>არხის დამატება ტრანსკოდერში</h2>
        <form asp-action="Insert" asp-controller="Transcoder">
            <div class="form-group">
                <label asp-for="Id">წყარო</label>
                <select asp-for="Id" asp-items="Model.CHanellNameList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="TranscodingFormat">ტრანსკოდირების ფორმატი</label>
                <select asp-for="TranscodingFormat" asp-items="Model.TranscodingFormatList" class="form-control"></select>

                <label asp-for="EmrNumber">EMR</label>
                <select asp-for="EmrNumber" asp-items="Model.EmrNumberList" class="form-control"></select>

                <label for="Card">ქარდი</label>
                <input required type="number" class="form-control" asp-for="Card" id="Card" placeholder="მაგ: 4" />

                <label for="Port">პორტი</label>
                <input type="number" required class="form-control" asp-for="Port" id="Port" placeholder="მაგ:5" />
            </div>
            <button type="submit" class="btn btn-primary">დამატება</button>
        </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
